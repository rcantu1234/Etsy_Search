<div>
  <ul class="ul-format">
    <% @items.each do |item| %>
      <li>
        <strong><%= item["title"] %></strong>
        <img src='<%= item["thumbnailImage"] %>' />
          <div class="price">
            <strong>Price: $</strong><%= item["price"] %><br>
          </div>
          <strong>Category: </strong><%= item["category_id"] %><br>
          <strong>Description: </strong><%= item["description"] %><br>
          <br>
      </li>
    <% end %>
  </ul>
</div>

<div>
  <span class="octicon octicon-home home-format"></span>
</div>
